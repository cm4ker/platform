<?xml version="1.0" encoding="utf-8"?>
<Config>
  <Syntax Name="TableNode">
    <Arguments>
      <Single Name="Name" Type="string" />
      <Single Name="Schema" Type="SchemaNode"/>
    </Arguments>
  </Syntax>

  <Syntax Name="ColumnNode">
    <Arguments>
      <Single Name="Name" Type="string" />
    </Arguments>
  </Syntax>

  <Syntax Name="SchemaNode">
    <Arguments>
      <Single Name="Name" Type="string" />
    </Arguments>
  </Syntax>

  <Syntax Name="AlterColumn">
    <Arguments>
      <Single Name="Column" Type="ColumnDefinitionNode" />
    </Arguments>
  </Syntax>

  <Syntax Name="AlterTypedActionNode">
    <Arguments>
      <Single Name="Type" Type="NodeActionType"/>
      <Single Name="Node" Type="QuerySyntaxNode"/>
    </Arguments>
  </Syntax>

  <Syntax Name="AlterTableNode">
    <Arguments>
      <Single Name="Table" Type="TableNode" />
      <List Name="Nodes" Type="AlterTypedActionNode"/>
    </Arguments>
  </Syntax>

  <Syntax Name="ComplexNode">
    <Arguments>
      <List Name="Nodes" Type="QuerySyntaxNode" />
    </Arguments>
  </Syntax>
  
  <Syntax Name="TypeDefinitionNode">
    <Arguments>
    </Arguments>
  </Syntax>

  <Syntax Name="IntTypeDefinitionNode" Base="TypeDefinitionNode"/>
  <Syntax Name="BigintTypeDefinitionNode" Base="TypeDefinitionNode"/>
  <Syntax Name="BinaryTypeDefinitionNode" Base="TypeDefinitionNode"/>
  <Syntax Name="DoubleTypeDefinitionNode" Base="TypeDefinitionNode"/>
  <Syntax Name="BooleanTypeDefinitionNode" Base="TypeDefinitionNode"/>
  <Syntax Name="GuidTypeDefinitionNode" Base="TypeDefinitionNode"/>
  <Syntax Name="DateTimeTypeDefinitionNode" Base="TypeDefinitionNode"/>
  <Syntax Name="ByteTypeDefinitionNode" Base="TypeDefinitionNode"/>
  <Syntax Name="TextTypeDefinitionNode" Base="TypeDefinitionNode"/>
  <Syntax Name="XmlTypeDefinitionNode" Base="TypeDefinitionNode"/>
  <Syntax Name="FloatTypeDefinitionNode" Base="TypeDefinitionNode"/>
  <Syntax Name="NumericTypeDefinitionNode" Base="TypeDefinitionNode">
    <Arguments>
      <Single Name="Scale" Type="int" />
      <Single Name="Precision" Type="int" />
    </Arguments>
  </Syntax>
  <Syntax Name="VarbinaryTypeDefinitionNode" Base="TypeDefinitionNode">
    <Arguments>
      <Single Name="Size" Type="int" />
    </Arguments>
  </Syntax>

  <Syntax Name="ColumnDefinitionNode">
    <Arguments>
      <Single Name="Column" Type="ColumnNode"/>
      <Single Name="Type" Type="TypeDefinitionNode"/>
      <Single Name="Identity" Type="bool" Null="true"/>

      <List Name="Constraints" Type="ConstraintDefinitionNode"/>
    </Arguments>
  </Syntax>

  <Syntax Name="PrimaryKeyConstraintDefinitionNode" Base="ComplexConstraintDefinitionNode">
    <Arguments>
    </Arguments>
  </Syntax>

  <Syntax Name="ForeignKeyConstraintDefinitionNode" Base="ComplexConstraintDefinitionNode">
    <Arguments>
      <List Name="PrimaryColumns" Type="ColumnNode"/>
      <Single Name="PrimaryTable" Type="TableNode"/>
      <Single Name="IsOnDelete" Type="bool" Null="true"/>
      <Single Name="IsOnUpdate" Type="bool" Null="true"/>
      <Single Name="Rule" Type="System.Data.Rule" Null="true"/>
    </Arguments>
  </Syntax>

  <Syntax Name="UniqueColumnConstraintDefinitionNode" Base="UniqueConstraintDefinitionNode"/>
  <Syntax Name="ForeignKeyColumnConstraintDefinitionNode" Base="ForeignKeyConstraintDefinitionNode"/>
  <Syntax Name="PrimaryKeyColumnConstraintDefinitionNode" Base="PrimaryKeyConstraintDefinitionNode"/>

  <Syntax Name="UniqueConstraintDefinitionNode" Base="ComplexConstraintDefinitionNode"/>

  <Syntax Name="NotNullConstraintDefinitionNode" Base="SimpleConstraintDefinitionNode"/>
  <Syntax Name="DefaultValueConstraintDefinitionNode" Base="SimpleConstraintDefinitionNode">
    <Arguments>
      <Single Name="DefaultValue" Type="object" />
    </Arguments> 
  </Syntax>
  <Syntax Name="DefaultMethodConstraintDefinitionNode" Base="SimpleConstraintDefinitionNode">
    <Arguments>
      <Single Name="DefaultMethod" Type="SystemMethods"/>
    </Arguments>
  </Syntax>
  <Syntax Name="SimpleConstraintDefinitionNode" Base="ConstraintDefinitionNode">
  <Arguments>
    <Single Name="Column" Type="ColumnNode"/>
  </Arguments>
  </Syntax>

  <Syntax Name="ConstraintNode">
    <Arguments>
      <Single Name="Name" Type="string"/>
    </Arguments>
  </Syntax>

  <Syntax Name="MultiNode">
    <Arguments>
      <List Name="Nodes" Type="QuerySyntaxNode"/>
    </Arguments>
  </Syntax>
  
  <Syntax Name="ComplexConstraintDefinitionNode" Base="ConstraintDefinitionNode">
    <Arguments>
      <Single Name="Constraint" Type="ConstraintNode" Null="true"/>
      <List Name="Columns" Type="ColumnNode"/>
    </Arguments>
  </Syntax>

  <Syntax Name="ConstraintDefinitionNode"/>

  <Syntax Name="IndexDefinitionNode">
    <Arguments>
      <Single Name="Name" Type="IdentifierNode"/>
      <Single Name="Table" Type="TableNode"/>
      <Single Name="Unique" Type="bool"/>
      <Single Name="Clustered" Type="bool"/>
    </Arguments>
  </Syntax>
  

  <Syntax Name="TableDefinitionNode">
    <Arguments>
      <Single Name="Table" Type="TableNode" />
      <List Name="Columns" Type="ColumnDefinitionNode"/>
      <List Name="Constraints" Type="ConstraintDefinitionNode"/>
    </Arguments>
  </Syntax>

  <Syntax Name="SelectNode">
    <Arguments>
      <List Name="Columns" Type="ColumnNode" />
      <Single Name="From" Type="FromNode" />
      <Single Name="Wher" Type="FromNode" />
      <Single Name="GroupBy" Type="FromNode" />
      <Single Name="OrderBy" Type="FromNode" />
    </Arguments>
  </Syntax>

  <Syntax Name="FromNode">
    <Arguments>
    </Arguments>
  </Syntax>

  <Syntax Name="JoinNode">
    <Arguments>
    </Arguments>
  </Syntax>

  <Syntax Name="WhereNode">
    <Arguments>
      <Single Name="Condition" Type="ConditionNode" />
    </Arguments>
  </Syntax>

  <Syntax Name="OrderByNode">
    <Arguments>
    </Arguments>
  </Syntax>
  
  <Syntax Name="GroupByNode">
    <Arguments>
    </Arguments>
  </Syntax>

  <Syntax Name="ConditionNode">
    <Arguments>
      <Single Name="Argument1" Type="QuerySyntaxNode" />
      <Single Name="Condition" Type="ConditionTypeNode" />
      <Single Name="Argument2" Type="QuerySyntaxNode" />
    </Arguments>
  </Syntax>

  <Syntax Name="ConditionTypeNode"/>
  <Syntax Name="EqualsConditionTypeNode" Base="ConditionTypeNode"/>
  <Syntax Name="NotEqualsConditionTypeNode" Base="ConditionTypeNode"/>
  <Syntax Name="NotConditionTypeNode" Base="ConditionTypeNode"/>
  <Syntax Name="GreatConditionTypeNode" Base="ConditionTypeNode"/>
  <Syntax Name="LessConditionTypeNode" Base="ConditionTypeNode"/>

  <Syntax Name="IdentifierNode">
    <Arguments>
      <Single Name="Name" Type="string" />
    </Arguments>
  </Syntax>

  <Syntax Name="ParameterNode">
    <Arguments>
    </Arguments>
  </Syntax>

</Config>