<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:s="clr-namespace:System"
        mc:Ignorable="d" d:DesignWidth="300" d:DesignHeight="450"
        x:Class="Aquila.Ide.Common.Editors.UITypeSelectorDialog"
        MinWidth="300" 
        Title="UITypeSelector">
  <DockPanel >

    <TextBlock Margin="5" HorizontalAlignment="Left" DockPanel.Dock="Top">Types:</TextBlock >

    <StackPanel  DockPanel.Dock="Bottom" Orientation="Horizontal" HorizontalAlignment="Right">
      <Button  Margin="5" Command="{Binding OkDialogCommand}" >Ok</Button>
      <Button Margin="5" Command="{Binding CancelDialogCommand}" >Cancel</Button>
    </StackPanel>
    <ListBox Name="TypeList" Items="{Binding Types}" SelectedItem="{Binding SelectType}">
      <ListBox.ItemTemplate>
        <DataTemplate>
            <TextBlock FontSize="16" Text="{Binding Name}"/>
        </DataTemplate>
      </ListBox.ItemTemplate>
    </ListBox>


  </DockPanel>
</Window>
