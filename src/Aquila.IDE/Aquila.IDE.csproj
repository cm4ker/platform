<Project Sdk="Microsoft.NET.Sdk">
    <PropertyGroup>
        <OutputType>Exe</OutputType>
        <TargetFramework>netcoreapp3.1</TargetFramework>
        <Configurations>Debug;Release;DebugServer</Configurations>
        <Platforms>AnyCPU</Platforms>
    </PropertyGroup>
    <ItemGroup>
        <Folder Include="Models\" />
        <Compile Update="**\*.xaml.cs">
            <DependentUpon>%(Filename)</DependentUpon>
        </Compile>
        <EmbeddedResource Include="**\*.xaml">
            <SubType>Designer</SubType>
        </EmbeddedResource>
        <EmbeddedResource Include="Assets\*" />
    </ItemGroup>
    <ItemGroup>
        <None Remove="Views\ConfigurationView.xaml" />
    </ItemGroup>
    <ItemGroup>
        <PackageReference Include="Avalonia" Version="0.9.1" />
        <PackageReference Include="Avalonia.AvaloniaEdit" Version="0.9.0-preview1" />
        <PackageReference Include="Avalonia.Desktop" Version="0.9.1" />
        <PackageReference Include="Avalonia.ReactiveUI" Version="0.9.1" />
    </ItemGroup>
    <ItemGroup>
        <EmbeddedResource Update="Views\ConfigurationView.xaml">
            <Generator>MSBuild:Compile</Generator>
        </EmbeddedResource>
    </ItemGroup>
</Project>