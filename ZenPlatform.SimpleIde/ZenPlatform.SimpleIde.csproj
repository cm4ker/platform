<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>netcoreapp3.0</TargetFramework>
  </PropertyGroup>
  <ItemGroup>
    <Compile Update="**\*.xaml.cs">
      <DependentUpon>%(Filename)</DependentUpon>
    </Compile>
    <AvaloniaResource Include="**\*.xaml">
      <SubType>Designer</SubType>
    </AvaloniaResource>
    <AvaloniaResource Include="Assets\**" />
  </ItemGroup>
  <ItemGroup>
    <AvaloniaResource Remove="CodeEditorView.xaml" />
    <AvaloniaResource Remove="PropertyGrid.xaml" />
    <AvaloniaResource Remove="Views\ConfigurationTreeView.xaml" />
    <AvaloniaResource Remove="Views\DockMainWindow.xaml" />
    <AvaloniaResource Remove="Views\MainView.xaml" />
    <AvaloniaResource Remove="Views\MainWindow.xaml" />
  </ItemGroup>
  <ItemGroup>
    <None Remove="CodeEditorView.xaml" />
    <None Remove="PropertyGrid.xaml" />
    <None Remove="Views\ConfigurationTreeView.xaml" />
    <None Remove="Views\DockMainWindow.xaml" />
    <None Remove="Views\MainView.xaml" />
    <None Remove="Views\MainWindow.xaml" />
  </ItemGroup>
  <ItemGroup>
    <PackageReference Include="Avalonia" Version="0.9.2" />
    <PackageReference Include="Avalonia.AvaloniaEdit" Version="0.9.0-preview1" />
    <PackageReference Include="Avalonia.Desktop" Version="0.9.2" />
    <PackageReference Include="Avalonia.ReactiveUI" Version="0.9.2" />
    <PackageReference Include="Dock.Avalonia" Version="0.9.2" />
    <PackageReference Include="Dock.Avalonia.Themes.Default" Version="0.9.2" />
    <PackageReference Include="Dock.Avalonia.Themes.Metro" Version="0.9.2" />
    <PackageReference Include="Dock.Model.ReactiveUI" Version="0.9.2" />
    <PackageReference Include="DynamicData" Version="6.14.3" />
  </ItemGroup>
  <ItemGroup>
    <EmbeddedResource Include="PropertyGrid.xaml">
      <Generator>MSBuild:Compile</Generator>
    </EmbeddedResource>
  </ItemGroup>
  <ItemGroup>
    <EmbeddedResource Include="Views\DockMainWindow.xaml">
      <Generator>MSBuild:Compile</Generator>
    </EmbeddedResource>
  </ItemGroup>
  <ItemGroup>
    <EmbeddedResource Include="Views\ConfigurationTreeView.xaml">
      <Generator>MSBuild:Compile</Generator>
    </EmbeddedResource>
  </ItemGroup>
  <ItemGroup>
    <EmbeddedResource Include="Views\MainView.xaml">
      <Generator>MSBuild:Compile</Generator>
    </EmbeddedResource>
  </ItemGroup>
  <ItemGroup>
    <EmbeddedResource Include="Views\MainWindow.xaml">
      <Generator>MSBuild:Compile</Generator>
    </EmbeddedResource>
  </ItemGroup>
  <ItemGroup>
    <ProjectReference Include="..\ZenPlatform.Configuration.Common\ZenPlatform.Configuration.Common.csproj" />
    <ProjectReference Include="..\ZenPlatform.Configuration.Contracts\ZenPlatform.Configuration.Contracts.csproj" />
    <ProjectReference Include="..\ZenPlatform.Configuration\ZenPlatform.Configuration.csproj" />
    <ProjectReference Include="..\ZenPlatform.Ide.Common\ZenPlatform.Ide.Common.csproj" />
    <ProjectReference Include="..\ZenPlatform.Test.Tools\ZenPlatform.Test.Tools.csproj" />
  </ItemGroup>
  <ItemGroup>
    <Compile Update="PropertyGrid.xaml.cs">
      <DependentUpon>PropertyGrid.xaml</DependentUpon>
    </Compile>
  </ItemGroup>
  <ItemGroup>
    <None Update="CSharp-Mode-Dark.xshd">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
  </ItemGroup>
  <ItemGroup>
    <Folder Include="Editors\" />
    <Folder Include="Items\" />
  </ItemGroup>
</Project>
