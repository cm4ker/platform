<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:ZenPlatform.UIBuilder"
        Title="Server management tool"
        x:Class="ZenPlatform.UIBuilder.MainWindow">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <TextBox Grid.Column="0" AcceptsReturn="True" TextWrapping="Wrap" Text="{Binding Input, Mode=TwoWay}" />
        <TextBox Grid.Column="1" AcceptsReturn="True" TextWrapping="Wrap" Text="{Binding Output, Mode=TwoWay}" />
    </Grid>
</Window>