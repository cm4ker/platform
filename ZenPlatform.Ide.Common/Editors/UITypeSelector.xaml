<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="ZenPlatform.Ide.Common.Editors.UITypeSelector"
        Title="UITypeSelector">
  <DockPanel >

    <TextBlock Margin="5" HorizontalAlignment="Left" DockPanel.Dock="Top">Types:</TextBlock >

    <StackPanel  DockPanel.Dock="Bottom" Orientation="Horizontal" HorizontalAlignment="Right">
      <Button  Margin="5" Command="{Binding DialogCommand}" CommandParameter="true">Ok</Button>
      <Button Margin="5" Command="{Binding DialogCommand}" CommandParameter="false">Cancel</Button>
    </StackPanel>
    <ListBox Name="TypeList" Items="{Binding Types}">
      <ListBox.ItemTemplate>
        <DataTemplate>
            <TextBlock FontSize="16" Text="{Binding Name}"/>
        </DataTemplate>s
      </ListBox.ItemTemplate>
    </ListBox>


  </DockPanel>
</Window>
