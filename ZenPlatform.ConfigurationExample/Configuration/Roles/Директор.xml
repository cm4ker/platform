<?xml version="1.0" encoding="utf-8" ?>
<Role>
    <Name>Директор</Name>
    <InterfaceUsage/>
    <PlatformRules>
        <!-- Пользователь являлется администратором данных  -->
        <IsDataAdministrator>true</IsDataAdministrator>

        <!-- Пользователю разрешено обновлять базу данных -->
        <UpdateDataBase>true</UpdateDataBase>

        <!-- Монопольный режим управления данными -->
        <MonopolisticMode>true</MonopolisticMode>

        <!-- Пользователю разрешено подключаться к приложению (активный пользователь) -->
        <IsActiveUser>true</IsActiveUser>

        <!-- Пользователю разрешено смотреть за логом регистрации данных -->
        <ActionLogView>true</ActionLogView>

        <!-- Пользователю разрешено пользоваться тонким клиентом -->
        <ThinClient>true</ThinClient>

        <!-- Пользователю можно заходить через веб -->
        <WebClient>true</WebClient>

        <!-- Пользователю разрешено подключаться через API для доступа к данным -->
        <ExternalConnection>true</ExternalConnection>

        <!-- Пользователю можно пользоваться внешними обработками -->
        <OpenProcessingModules>true</OpenProcessingModules>

        <!-- Пользователю разрешено открывать консоль данных-->
        <ConsoleAccess>true</ConsoleAccess>
    </PlatformRules>
    <DataRules>
        <Rule ObjectId="SOME_GUID">
            <!-- Позволять роли читать данные -->
            <AllowRead>true</AllowRead>
            
            <!-- Позволять роли просматривать данные -->
            <AllowView>true</AllowView>
            
            <!-- Позволять роли добавлять данные -->
            <AllowAdd>true</AllowAdd>

            <!-- Позволять роли удалять данные из программного кода -->
            <AllowDelete>true</AllowDelete>

            <!-- Позволять роли удалять данные только из интерфейса -->
            <AllowInteractiveDelete>true</AllowInteractiveDelete>
            
            <!-- Позволять роли обновлять данные -->
            <AllowUpdate>true</AllowUpdate>
        </Rule>
    </DataRules>
</Role>