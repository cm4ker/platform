<UserControl x:Class="ZenPlatform.ThinClient.Views.ConfTreeView"
             xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid Focusable="True">

        <TreeView Items="{Binding Items}">
            <TreeView.ItemTemplate>
                <TreeDataTemplate ItemsSource="{Binding Childs}">
                    <StackPanel Orientation="Horizontal">
                        <Image Name="img"
                               Stretch="Fill"
                               Source="resm:ZenPlatform.ThinClient.Assets.folder.png" />
                        <TextBlock Text="{Binding Name}" />
                    </StackPanel>
                </TreeDataTemplate>
            </TreeView.ItemTemplate>
        </TreeView>

    </Grid>
</UserControl>